- posts.each do |post|
  .col-md-4
    = link_to image_tag(post.cover_page_url, {height: 220, width:320}), post_path(post)
    %p
    %p
      %a.btn.btn-default.fb_share{:role => "button", :href => "http://www.facebook.com/sharer/sharer.php?u=#url", :target => "_blank"} Facebook share      
      %a.btn.btn-default{:href => "http://www.linkedin.com/shareArticle?mini=true&url={http://localhost:3000}", :role => "button"} Linkedin share
      = link_to 'QR', post.qr_image_path, class: ['btn', 'btn-default']
	  
	  
	  