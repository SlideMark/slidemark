.form-group
  = t.label :title, '标题(必须)', class: ['col-sm-1', 'control-label']
  .col-sm-8
    = t.text_field :title, class: 'form-control', placeholder: '输入标题'
    %p.help-block Input title within 255 characters
.form-group
  #editor
    = t.text_field :content
  #panel
%script
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/monokai");
  editor.getSession().setMode("ace/mode/markdown");