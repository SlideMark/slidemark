= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin-for-regist', role: 'form', align: 'center'}) do |f|
  %h2= t('navi.regist')
  .form-group
    = f.label :email, class: ['col-sm-3', 'control-label']
    .col-sm-8
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email'
  .form-group
    = f.label :password, class: ['col-sm-3', 'control-label']
    .col-sm-8
      - if @validatable
        %em.pull-left
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password'
  .form-group
    = f.label :password_confirmation, class: ['col-sm-3', 'control-label']
    .col-sm-8
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'password again'
  .form-group
    = f.submit t('navi.regist'),  class: ['btn', 'btn-md', 'btn-primary']
  .form-group
    = render "devise/shared/links"
