!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'SlideMark'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Share your slide'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{src: "/assets/src/ace.js", type: "text/javascript", charset: "utf-8"}
    = csrf_meta_tags
    %style#holderjs-style{:type => "text/css"}
  %body{:style => ""}
    <div id="fb-root"></div>
    <script>(function(d, s, id) { var js, fjs = d.getElementsByTagName(s)[0];if (d.getElementById(id)) return; js = d.createElement(s); js.id = id; js.src = "//connect.facebook.net/en_US/all.js#xfbml=1"; fjs.parentNode.insertBefore(js, fjs);}(document, 'script', 'facebook-jssdk'));</script>
    <script src="//platform.linkedin.com/in.js" type="text/javascript">lang: en_US</script>
    = render 'layouts/navigation'
    = yield
= render 'layouts/footer'
= debug(params) if Rails.env.development?
