.text-center.form-signin
  - resource_class.omniauth_providers.each do |provider|
    = button_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-lg btn-info align-fb-login form-control"
= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin', role: 'form', align: 'center'}) do |f|
  %hr
  %h5.form-signin-heading.or or sign in with Email
  = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email'
  = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password'
  - if devise_mapping.rememberable?
    .form-group
      .pull-left
        = f.check_box :remember_me
        = f.label :remember_me
    .form-group
      = f.submit t('navi.signin'),  class: ['form-control', 'btn', 'btn-md', 'btn-primary'] 
      .white-space ................
      .pull-left.align-shared-links= render "devise/shared/links"
