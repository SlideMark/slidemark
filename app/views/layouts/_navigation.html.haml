-# navigation styled for Bootstrap 3.0
.navbar-wrapper
  .container
    .navbar.navbar-inverse.navbar-static-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'SlideMark', root_path, class: 'navbar-brand'
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li= link_to 'ppts', posts_path, class: 'active'
            %li= link_to 'users', root_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                其他
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'GitHub', 'https://github.com/SlideMark/slidemark'
                %li= link_to 'blog', 'http://fdwills.com'
            - if user_signed_in?
              %li= link_to "#{current_user.email}#{t('navi.home')}", home_user_path(current_user)
              %li= link_to 'logout', destroy_user_session_path, method: :delete, data: { confirm: t('navi.logout.confirm') }
            - else
              = form_for(:user, url: session_path(:user), html: { class: ['navbar-form', 'navbar-right'], role: 'form'}) do |t|
                .form-group
                  = t.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email'
                .form-group
                  = t.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
                .form-group
                  = t.submit t('navi.signin'), class: ['btn-success', 'btn']
                  = link_to t('navi.regist'), new_user_registration_path, class: ['btn-link', 'btn']