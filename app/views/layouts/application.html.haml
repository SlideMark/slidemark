!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'SlideMark'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Share your slide'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{src: "/assets/src/ace.js", type: "text/javascript", charset: "utf-8"}
    = csrf_meta_tags
    %style#holderjs-style{:type => "text/css"}
  %body{:style => ""}
    = render 'layouts/navigation'
    = render 'layouts/messages'
    = yield
    = render 'layouts/footer'
